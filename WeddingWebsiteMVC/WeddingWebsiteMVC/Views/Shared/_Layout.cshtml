@using WeddingWebsiteMVC.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Zach & Erica</title>
    <link href="~/favicon.ico" rel="shortcut icon" />
    <meta name="viewport" content="user-scalable=no , width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!--[if lt IE 9]>
    <script src="~/Scripts/html5shiv.js"></script>
    <![endif]-->
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
    @Styles.Render("~/Content/css")
</head>
<body>
    <div id="container">
        <div class="navbar navbar-default" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="btn navbar-toggle" data-toggle="collapse" data-target="#bs-navbar-collapse">
                        <span class="sr-only">Toggle Navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="bs-navbar-collapse" role="navigation">
                    <ul class="nav navbar-nav">
                        @Html.MenuLink("Home", "Index", "Home")
                        @Html.MenuLink("Our Story", "Index", "OurStory")
                        @Html.MenuLink("Wedding Party", "Index", "WeddingParty")
                        <li class="dropdown">
                            <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">Details <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                @Html.MenuLink("Itinerary", "Index", "Itinerary")
                                <li class="divider"></li>
                                @Html.MenuLink("Venue & Accommodations", "Index", "Accommodations")
                                <li class="divider"></li>
                                @Html.MenuLink("Gift Registry", "Index", "GiftRegistry")
                            </ul>
                        </li>
                        @Html.MenuLink("Gallery", "Index", "Gallery")
                        @Html.MenuLink("Share", "Index", "ShareYourPhotos")
                        @Html.MenuLink("Comment", "Index", "Comment")
                    </ul>
                </div>
            </div>
        </div>
        <div id="header">
            @if (IsSectionDefined("header"))
            {
                @RenderSection("header", true)
            }
        </div>
        <div id="body">
            <div class="container">
                @RenderBody()
            </div>
        </div>
        <div id="footer">
            <p>
                <span>&copy; Zach & Erica Stoltz</span>
                    <img src="http://www.w3.org/html/logo/badge/html5-badge-h-css3.png" alt="HTML5 Powered with CSS3 / Styling" title="HTML5 Powered with CSS3 / Styling, and Semantics">
                
            </p>
        </div>
    </div>
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts",false)
    @if (!IsSectionDefined("header"))
    {
        if (Context.Request.Browser.IsMobileDevice)
        {
            @RenderSection("header", true)
        }
        else
        {
            <script type="text/javascript">
                $(document).ready(function () {
                    $("#header").css("display", "none");
                });
            </script>
        }
    }
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-54131113-1', 'auto');
        ga('send', 'pageview');
    </script>
    <script src="~/Scripts/tooltip.js"></script>
</body>
</html>
